# Regole personalizzate per il monitoraggio di attivitÃ  sospette

alert icmp any any -> any any (msg:"ICMP Packet Detected"; sid:1000001; rev:1;)

# Rilevamento di SQL Injection
alert tcp $EXTERNAL_NET any -> $HOME_NET 80 (msg:"SQL Injection Attempt - UNION SELECT"; content:"union select"; sid:1000002; rev:1;)

# Rilevamento di traffico sospetto su HTTPS
alert tcp $HOME_NET any -> $EXTERNAL_NET 443 (msg:"Suspicious HTTPS traffic"; flags: S; sid:1000003; rev:1;)

# Tentativo di buffer overflow FTP
alert tcp $EXTERNAL_NET any -> $HOME_NET 21 (msg:"FTP Buffer Overflow Attempt"; content:"USER"; sid:1000004; rev:1;)

# Rilevamento di tentativi di attacco DDoS (dimensione pacchetto > 1400 bytes)
alert ip $EXTERNAL_NET any -> $HOME_NET any (msg:"Possible DDoS detected - Large packet size"; dsize:>1400; flow:to_server; sid:1000005; rev:1;)

# Rilevamento di attacchi tramite SMB (porta 445)
alert tcp $EXTERNAL_NET any -> $HOME_NET 445 (msg:"MS SMB Vulnerability Exploit"; content:"|45 00 00 00|"; sid:1000006; rev:1;)

# Tentativo di scansione SYN
alert tcp $EXTERNAL_NET any -> $HOME_NET any (msg:"SYN Scan Attempt"; flags:S; flow:stateless; sid:1000007; rev:1;)

